#!/bin/sh

compiler="@CXX@"

prefix=@prefix@
exec_prefix=@exec_prefix@
shmem_dir=@prefix@
shmem_include=@includedir@
shmem_lib=@libdir@

shmemlib_stanza="-L$shmem_lib -Wl,-rpath,$shmem_lib -lshmem -lshmemi"

# check to see if linking required: if not, throw away link args
for c in $@
do
    case $c in
        -[cES])
            shmemlib_stanza=""
            ;;
        *)
            ;;
    esac
done
    
$compiler \
    -I$shmem_include \
    $@ \
    $shmemlib_stanza
